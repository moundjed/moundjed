#include <stdio.h>

int main () {
    char chars [4][4] ={ {'a','4','h','6'},
                         {'9','2','l','z'},
                         {'5','7','p','4'},
                         {'y','2','3','b'} 
                                           };
   int i , j;
   i=0; 
   j=0 ;
   
   //printf ('donnez la taille ');
   //scanf ('%d',&n);
   for (i=0 ; i<4 ;i++){
        for (j=0 ; j<4 ;j++){
       printf ("%c ",chars[i][j]);
   }  
       printf("\n");
   }
   printf("////////////////// \n");
       
     for (i=0 ; i<4 ;i+=2){
        for (j=0 ; j<4 ;j++){
       printf ("%c ",chars[i][j]);
   }  
       printf("\n");
   }  
     printf("////////////////// \n");
   
        for (i=0 ; i<4 ;i++){
        for (j=0 ; j<4 ;j++){
            if (chars[i][j] % 2 =1){
       printf ("%c ",chars[i][j]);
       }
   }  
       printf("\n");
   }  
     printf("////////////////// \n");
   
           for (i=0 ; i<4 ;i++){
        for (j=0 ; j<4 ;j++){
            
       printf ("%c ",chars[j][i]);
       
   }  
       printf("\n");
   }  
    printf("////////////////// \n");
              for (i=0 ; i<4 ;i++){
        for (j=0 ; j<4 ;j++){
            
       printf ("%c ",chars[j][j]);
       
   }  
       printf("\n");
   }  


    
   
    return 0 ;
}
